                            <div class="panel panel-default">

                                <div class="panel-body">
                                    <form role="form">
                                        <div class="row">
                                            <div class="col-xs-6 col-sm-6 col-md-6">
                                                <div class="form-group">
                                                    <input type="text" class="form-control" placeholder="Enter Container Image type..." id="image" align="middle" maxlength="80" size="100" style="height:40px;width:400px">
                                                    <h5><small>Example: Ubuntu</small></h5>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-6 col-sm-6 col-md-6">
                                                <div class="form-group">
                                                    <input type="text" class="form-control" placeholder="Enter Device name..." id="device" align="middle" style="height:40px;width:1000px">
                                                    <h5><small>Example: BeagleBoneâ€¦</small></h5>
                                                </div>
                                            </div>
                                        </div>


                                        <div class="row">
                                            <div class="col-xs-6 col-sm-6 col-md-6">
                                                <div class="form-group">

                                                    <input type="text" class="form-control" placeholder="Enter a Conatiner Name..." id="container_name" align="middle" style="height:40px;width:700px">
                                                    <h5><small>Example: </small></h5>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-xs-3 col-sm-3 col-md-3">
                                                <div class="form-group">
                                                    <input type="number" class="form-control" placeholder="Enter a Internal Command..."  style="height:40px;width:700px">
                                                    <h5><small>Example: cd ..</small></h5>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-6 col-sm-6 col-md-6">
                                                <div class="form-group">
                                                    <input type="file" class="form-control"  min="1" name="img" style="height:40px;width:700px">

                                                </div>
                                            </div>
                                        </div>


                                <input type="submit" class="btn btn-primary btn-lg"  align="middle"/>
                        </div>
                    </div>
                        </div>

</form>
</div>
</div>

